#import "glfw3"

TITLE :: "GLFW";

main :: fn () s32 {
    glfwInit();
    defer glfwTerminate();

    window :: glfwCreateWindow(1280, 720, TITLE.ptr, null, null);
    defer glfwDestroyWindow(window);
    glfwMakeContextCurrent(window);
    loop glfwWindowShouldClose(window) == 0 {
        glfwPollEvents();
        glfwSwapBuffers(window);
    }
    return 0;
}